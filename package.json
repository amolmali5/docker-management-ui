{
  "name": "docker-management-ui",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "build:docker": "tsc --project tsconfig.docker.json && next build || true",
    "start": "next start",
    "lint": "next lint",
    "server:start": "node server/server.js",
    "server:dev": "node server/server.js",
    "dev:all": "concurrently \"npm run dev\" \"npm run server:dev\"",
    "start:all": "concurrently \"npm run start\" \"npm run server:start\"",
    "app": "npm run dev:all"
  },
  "dependencies": {
    "@headlessui/react": "^2.2.2",
    "@heroicons/react": "^2.2.0",
    "axios": "^1.8.4",
    "bcryptjs": "^3.0.2",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dockerode": "^4.0.5",
    "express": "^4.17.1",
    "express-session": "^1.18.1",
    "jsonwebtoken": "^9.0.2",
    "lowdb": "^1.0.0",
    "next": "15.3.1",
    "path-to-regexp": "^6.2.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-icons": "^5.5.0",
    "recharts": "^2.15.3",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "uuid": "^9.0.1",
    "xterm": "^5.3.0",
    "xterm-addon-fit": "^0.8.0",
    "xterm-addon-web-links": "^0.9.0"
